<?xml version="1.0" encoding="utf-8"?>
<!--LinearLayout orientation horizontal -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <!--TextView for displaying Name -->
    <androidx.cardview.widget.CardView
        android:id="@+id/Tarjeto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        android:checked="false"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <!--LinearLayout orientation Vertical -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <!--TextView for displaying Name -->
            <ImageView
                android:id="@+id/imageViewParticipante"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:contentDescription="Imagen de perfil del usuario"
                app:srcCompat="@drawable/placeholder_usuario" />

            <TextView
                android:id="@+id/Nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:text="Name" />



            <TextView
                android:id="@+id/EstadoParticipacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#454545"
                android:textSize="16sp"
                tools:text="EstadoParticipacion" />
            <TextView
                android:id="@+id/Tiempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                tools:text="Inicio --:--:--" />
            <!--TextView for displaying Email -->
            <TextView
                android:id="@+id/Balizas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#454545"
                android:textSize="16sp"
                tools:text="EstadoBalizas" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
